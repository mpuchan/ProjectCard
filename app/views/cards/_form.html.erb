<%= form_with(model: card, url: board_lists_path, local: true) do |form| %>
  <% if card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(card.errors.count, "error") %> prohibited this card from being saved:</h2>

      <ul>
        <% card.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="modal fade bd-example-modal-sm" id="cardModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Card</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group ">
          <%= form.label :list %>
          <%= form.text_field :list %>
        </div>

        <div class="form-group">
        <%= form.label :position %>
        <%= form.number_field :position %>
        </div>

        <div class="form-group">
        <%= form.label :tipe %>
        <%= form.text_field :tipe %>
        </div>

        <div class="form-group">
        <%= form.label :user_id %>
        <%= form.number_field :user_id %>
        </div>
          
        <div class="form-group">
        <%= form.label :status %>
        <%= form.number_field :status %>
        </div>
      </div>
      <div class="modal-footer">
       
        <%= form.submit class:'btn button4 btn-block'  %>
    
      </div>
    </div>
  </div>
</div>
</div>
<% end %>
  

 