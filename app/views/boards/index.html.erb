
<p id="notice"><%= notice %></p>

<%= link_to 'New Board', new_board_path,class: 'btn button6  ' %>
<hr size="4px">
&nbsp;
<h1 class="tb-custom">Table Boards</h1>
<div class="table-responsive">
<table class="table table-bordered table-striped-orange   center  table-hover table-custom-hover">
  <thead>
    <tr>
      <th class="tb-custom th-custom">Id Board</th>
      <th class="tb-custom th-custom">Title</th>
      <th class="tb-custom th-custom">Description</th>
      <th class="tb-custom th-custom">User</th>
      <th colspan="3" class="tb-custom th-custom">Aksi</th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td class="tb-custom"><%= board.id %></td>
        <td class="tb-custom"><%= board.title %></td>
        <td class="tb-custom"><%= board.description %></td>
        <td class="tb-custom"><%= board.user.username %></td>
        <td class="tb-custom a"><%= link_to 'Show', board %></td>
        <td class="tb-custom a"><%= link_to 'Edit', edit_board_path(board) %></td>
        <td class="tb-custom a"><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>


