<%= link_to 'New Board', new_board_path, class:'btn btn-success' %>
  <hr id="cost3">
    <br>
      <div class="row-3" style="margin-left:50px; ">
        <div class="card col-md-8">
          <div class="card-title">
            <h4 align ="center">My Project</h4>
          </div>
        </div>
        
        &nbsp; 
        <div class = "row">
        <div class = "col-md-10">
            <div class = "boards" >
      <% @boards.each do |board| %>
          <div class = board>
          <div class="card col-md-12 ">
             <div class="dropdown" style="text-align: right;">
  <a class="" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
   :::
  </a>

  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
  <center><strong>Action</strong></center>
  <div class="dropdown-divider "></div>
  
  <%= link_to 'Edit', edit_board_path(board), class: "dropdown-item" %>
   <%= link_to 'Delete', board, method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
</div>
</div>
         
            &nbsp;  
              <div class="accordion" id="accordionExample<%= board.id %>">
                <div class="card">               
                  <div class="card-header" id="headingOne<%= board.id %>">
                    <h2 class="mb-0">
                      <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne<%= board.id %>" aria-expanded="true" aria-controls="collapseOne<%= board.id %>">
                        <%= board.title %>
                      </button>
                    </h2>
                  </div>
                  
                    <div id="collapseOne<%= board.id %>" class="collapse show" aria-labelledby="headingOne<%= board.id %>" data-parent="#accordionExample<%= board.id %>">
                      <div class="card-body">
                        <%= board.description %>
                      </div>
                    </div>
                  </div>
                    &nbsp;
              </div>
              </div>
              </div>
            <% end %>
            </div>
          </div>
          </div>
          </div>
          </div>
 




