<!DOCTYPE html>
<html>
  <head>
    <%= render 'structure/head' %>
  </head>

  <body>
  <% if !user_signed_in? %>
    <%= render 'structure/notif'  %>
  
      <div id="page-content-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
              <%= yield %>
            </div>
          </div>
        </div>
      </div> 
    <% else %>
      <%= render 'structure/navbar' %>
      <%= render 'structure/sidebar'%>
      <%= render 'structure/notif'  %>

    
      <div id="page-content-wrapper">
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-12">
              <%= yield %>
            </div>
          </div>
        </div>
      </div> 
  <% end %>
  </body>
</html>
