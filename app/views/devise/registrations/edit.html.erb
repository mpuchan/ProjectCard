<h2>Edit <%= resource_name.to_s.humanize %></h2> 

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="container-fluid">
    <h1>Edit Profile</h1>
    <hr>
    <div class="row">

    <!-- left column -->
      <div class="col-md-3">
        <div class="text-center">          
            <%= image_tag user_avatar(resource, 100), class: "rounded-circle" %>
              <h6>Change Profile Picture</h6>
            <%= f.file_field :avatar %>
        </div>
      </div>

      <div class="col-md-9 personal-info">
        <div class="alert alert-info alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">x</a>
            <i>This is an <strong>.alert</strong>. Use this to show important messages to the user.</i>
        </div>
          <h3>Personal Info</h3>

      <form class="form-horizontal" role="form">
        <div class="form-group">
          <%= f.label :username, class: "col-lg-3 control-label"%>
          <%= f.text_field :username, class: "col-lg-8" %>  
        </div>

        <div class="form-group">
          <%= f.label :email, class: "col-lg-3 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-8" %>
        </div>
  
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
          <div class="form-group">
            <%= f.label :password, class: "col-lg-3 control-label" %>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Input New Password (*6 Characters Minimum)", class: "col-lg-8" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: "col-lg-3 control-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Re-type New Password", class: "col-lg-8" %>
          </div>

          <div>
            <div class="field">
              <%= f.label :current_password, class: "col-lg-3 control-label" %>
              <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "input your current password to confirm your changes", class: "col-lg-8" %>
            </div>
          </div>

          <div class="actions", align="center">
            <%= f.submit "Update", class:"btn btn-primary" %>
            <%= link_to "Back", :back, class:"btn btn-dark" %>
          </div>
<% end %>
</div>

<div class="row">
  <div class="col-md-3">
    <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %>
  </div>
</div>