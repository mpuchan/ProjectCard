<div class="container center" >
  <div class="col-lg-2 col-lg-offset-8" >
    <div class="card" style="width: 38rem;">
      <div class="card-top bg-info mb-7" style= "height: 100px;">
        <div class="container">
          <h2 style ="color: white;"><strong>Forgot Your Password?</strong></h2>
        </div>
      </div>

<div class="card-body">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="form-group">
      <%= f.label :login %><br />
      <%= f.text_field :login, autofocus: true, class:'form-control' %>
    </div>
      
    <%= render "devise/shared/error_messages", resource: resource %> 

      <div class="actions">
        <%= f.submit "Send Me Reset Password", class:'btn btn-info btn-lg btn-block'%>
      </div>
  
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</div>