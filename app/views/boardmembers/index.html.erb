<p id="notice"><%= notice %></p>

<h1>Boardmembers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Board</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boardmembers.each do |boardmember| %>
      <tr>
        <td><%= boardmember.user.username %></td>
        <td><%= boardmember.board.title %></td>
        <td><%= boardmember.role %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New boardmember', new_board_boardmember_path %>