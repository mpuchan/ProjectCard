<p id="notice"><%= notice %></p>

<h1>Boardmembers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Board</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boardmembers.each do |boardmember| %>
      <tr>
        <td><%= boardmember.user.username %></td>
        <td><%= boardmember.board.title %></td>
        <td><%= boardmember.role %></td>
        <td><%= link_to 'Edit', edit_boardmember_path(boardmember) %></td>
        <td><%= link_to 'Destroy', boardmember, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New boardmember', new_boardmember_path %>